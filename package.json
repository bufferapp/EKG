{
  "name": "@bufferapp/ekg",
  "version": "0.0.1",
  "description": "Health and liveness checks",
  "main": "src/index.js",
  "scripts": {
    "serve": "node src/serve.js",
    "test": "jest",
    "test-watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bufferapp/EKG.git"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "node": true,
      "es6": true
    },
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        2,
        {
          "singleQuote": true,
          "trailingComma": "all",
          "semi": false,
          "bracketSpacing": true
        }
      ],
      "no-unused-vars": 2
    }
  },
  "keywords": [
    "kubernetes",
    "heathcheck"
  ],
  "author": "hharnisc@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bufferapp/EKG/issues"
  },
  "homepage": "https://github.com/bufferapp/EKG#readme",
  "devDependencies": {
    "babel-eslint": "^8.2.2",
    "eslint": "^4.18.1",
    "eslint-plugin-prettier": "^2.6.0",
    "jest": "^22.4.2",
    "prettier": "^1.11.0",
    "test-listen": "^1.1.0",
    "then-sleep": "^1.0.1"
  },
  "dependencies": {
    "joi": "^13.1.2",
    "micro": "^9.1.0",
    "microrouter": "^3.0.0",
    "request-promise": "^4.2.2"
  }
